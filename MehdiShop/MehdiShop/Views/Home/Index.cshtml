@model IEnumerable<Product>
@{
    ViewData["Title"] = "فروشگاه مهدی";
}

<div class="text-center">
    <h1 class="display-4">به فروشگاه ما خوش آمدید</h1>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-4">
                <div class="card">
                    <h3 class="card-header">@item.Name</h3>
                    <img style="width: 100%; height: 200px;" src="/images/@(item.Id).jpg" class="card-img-top img-thumbnail">
                    <div class="card-body">
                        <p class="card-text">@item.Description</p>
                    </div>
                    <hr/>
                    <div class="card-body">
                        <a asp-action="Detail" asp-controller="Home" asp-route-id="@item.Id" class="card-link">مشاهده جزئیات</a>
                    </div>
                    @* <div class="card-footer text-muted"> *@
                    @*     @if (item.Item.QuantityInStock > 0) *@
                    @*     { *@
                    @*         <h6>قیمیت: @item.Item.Price</h6> *@
                    @*     } *@
                    @*     else *@
                    @*     { *@
                    @*         <h6>نا موجود</h6> *@
                    @*     } *@
                    @* </div> *@
                </div>
            </div>
        }
    </div>
</div>